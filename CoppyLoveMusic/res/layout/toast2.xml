<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   android:orientation="horizontal" android:layout_width="fill_parent"  
    android:gravity="center_vertical"  
   android:layout_height="fill_parent"
   >  
   <RelativeLayout android:layout_width="wrap_content"  
       android:layout_height="wrap_content">
   <ImageView android:id="@+id/img" android:layout_width="wrap_content"  
        android:src="@drawable/content_empty_left" 
        android:layout_height="wrap_content"
        
        />  
    <TextView android:id="@+id/tv" android:layout_width="wrap_content"  
       android:layout_height="wrap_content" android:text="Toast自定义样式"
       android:layout_marginLeft="30dp" 
       android:layout_marginTop="20dp"
       android:textColor="#ff0000"/>  
       </RelativeLayout>
</LinearLayout>  
